<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.woodys.widgets.ExpandTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="20dp"
            android:text="@string/desc_string"
            android:textColor="#666666"
            android:textSize="16sp"
            app:etv_arrowAlign="top"
            app:etv_arrowPosition="right"
            app:etv_maxCollapsedLines="2"
            app:etv_is_collapsed="false"/>

        <com.woodys.widgets.ExpandTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="20dp"
            android:text="@string/desc_string"
            android:textColor="#666666"
            android:textSize="16sp"
            app:etv_arrowAlign="center"
            app:etv_arrowPosition="right"
            app:etv_maxCollapsedLines="4"
            app:etv_is_collapsed="true"
            app:etv_expandDrawable="@drawable/ic_expand_small_holo_light"
            app:etv_collapseDrawable="@drawable/ic_collapse_small_holo_light" />

        <Button
            android:id="@+id/bt_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="测试按钮"/>

        <com.woodys.widgets.ExpandTextView
            android:id="@+id/etv_ExpandTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/desc_string"
            android:textColor="#666666"
            android:textSize="16sp"
            app:etv_arrowAlign="bottom"
            app:etv_arrowPosition="right"
            app:etv_maxCollapsedLines="0"
            app:etv_is_collapsed="true"
            android:background="@color/pink"/>
    </LinearLayout>
</ScrollView>