<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="3dp"
            android:text="TextView"
            android:textSize="17sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:padding="3dp"
            android:textColorHighlight="@android:color/holo_blue_dark"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/align1_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="3dp"
            android:text="align1_text_view"
            android:textSize="17sp"
            android:textStyle="bold">
        </TextView>

        <com.woodys.demos.widgets.AlignTextView1
            android:id="@+id/align_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/align1_text_view_title"
            android:background="@color/colorBluePrimary"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            cb:align="left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/align_text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="3dp"
            android:text="align_text_view"
            android:textSize="17dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"/>

        <com.woodys.widgets.textview.aligntextview.AlignTextView
            android:id="@+id/cb_align_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/align_text_view_title"
            android:background="@drawable/green_select"
            android:textColorHighlight="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:textIsSelectable="false"
            android:text="align1_text_view"
            android:textColorLink="@color/colorAccent"
            cb:at_convert="false"/>

    </RelativeLayout>
</LinearLayout>